<ui:SidePanelPageChild x:Class="Transity.Pages.Games.LineDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Transity.Pages.Games"
	  xmlns:ui="clr-namespace:Transity.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LineDetail"
	  Loaded="OnLoadEvent">
    <Grid>
		<StackPanel>
			<Label Content="line-detail-title" ui:UITranslator.ContentTranslationKey="line-detail-title" Style="{StaticResource Title}" HorizontalAlignment="Center"></Label>
			<Button x:Name="deleteLineButton" Content="delete-line" ui:UITranslator.ContentTranslationKey="delete-line" Style="{StaticResource RegularButton}" HorizontalAlignment="Center" Click="OnDeleteLineButtonClicked"></Button>
		</StackPanel>
    </Grid>
</ui:SidePanelPageChild>
